@helper RenderChildItems(List<NavigationListItemModel> listItems)
{
if (listItems != null)

{
    foreach (var item in listItems)
    {
        var linkUrl = item.Link.Url;
        if (@item.Link.Text == "Services")
        {
            linkUrl = "#home";
        }
            <a href="@linkUrl" class="-slide-white-50 smoothScroll">@item.Link.Text</a><span class="bullet"></span>
        }
    }
}